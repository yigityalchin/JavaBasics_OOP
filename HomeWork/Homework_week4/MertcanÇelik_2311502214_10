import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Bir dize girin: ");
        String dize = scanner.nextLine();

        String tersDize = "";

        for (int i = dize.length() - 1; i >= 0; i--) {
            tersDize += dize.charAt(i);
        }

        System.out.println("Ters cevrilmis dize: " + tersDize);

    }
}

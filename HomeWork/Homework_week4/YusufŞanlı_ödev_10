import java.util.Scanner;
public class StringiTersCevirme{
    public static void main(String[] args){
  String sonuc=" ";
  int i;
      Scanner d =new Scanner(System.in);
    System.out.println("Bir metin giriniz ") ; String metin=d.nextLine(); 
      for(i=metin.length()-1; i>=0; i--)
			sonuc+=metin.charAt(i);  
        System.out.println("Metnin tersi = "+sonuc);

   }   
    
    }

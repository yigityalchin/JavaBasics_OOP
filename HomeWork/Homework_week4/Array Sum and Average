import java.util.Scanner;
public class Dizitoplam覺veortalamas覺 {

	public static void main(String[] args) {
		
		
		
        Scanner deger = new Scanner(System.in);
        System.out.print("Dizi boyutu ne olsun: ");
        int boyut = deger.nextInt();
        
        

       
        int[] dizi = new int[boyut];
        for (int i = 0; i < boyut; i++) {
            System.out.print("Dizinin " + (i+1) + ". eleman覺n覺 girin: ");
            dizi[i] = deger.nextInt();
        }
        
        

        
        int toplam = 0;
        for (int i = 0; i < boyut; i++) {
            toplam += dizi[i];
        }
        double ort =  toplam / boyut;

      
        System.out.println("dizinin Toplami: " + toplam);
        System.out.println("dizinin Ortalamasi: " + ort);

	}

}


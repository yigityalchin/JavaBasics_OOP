import java.util.Scanner;
public class hesaplama {
    public static void main(String[] args) {
            Scanner girdi_sayisi = new Scanner(System.in);

            System.out.println("Birinci sayıyı giriniz:");
            float sayi1 = girdi_sayisi.nextFloat();

            System.out.println("İkinci sayıyı giriniz:");
            int sayi2 = girdi_sayisi.nextInt();

            float toplam = sayi1 + sayi2;
            System.out.println("Toplam: " + toplam);

            float cikarma = sayi1 - sayi2;
            System.out.println("Çıkarma: " + cikarma);

            float carpma = sayi1 * sayi2;
            System.out.println("Çarpma: " + carpma);

            float bölme= sayi1/sayi2;
            System.out.println("bölme: " + bölme);

        }
    }
